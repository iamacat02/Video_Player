<resources>

    <!-- Base application theme -->
    <style name="I.Am.A.Cat.VideoPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light Theme -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">@font/roboto_slab_medium</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Light Mode Status Bar Icon -->
    </style>

    <!-- FullScreen Activity Theme -->
    <style name="I.Am.A.Cat.VideoPlayer.FullScreenActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/roboto_slab_medium</item>
    </style>
</resources>